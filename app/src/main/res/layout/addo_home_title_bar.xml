<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/addo_primary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/village_select_title"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:height="30dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="start"
        style="@style/selectClientVillag"
        android:text="@string/add_select_village" />

    <TextView
        style="@style/askTheClientIfTh"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/village_select_title"
        android:layout_marginTop="12dp"
        android:width="328dp"
        android:height="133dp"
        android:gravity="center"
        android:paddingTop="3dp"
        android:text="@string/ask_client_village" />

</RelativeLayout>