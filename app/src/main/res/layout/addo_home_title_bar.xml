<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_weight="2"
    android:background="@color/white"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1.5">

        <ImageButton
            android:id="@+id/btn_search_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="3dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_home"
            android:tint="@color/addo_primary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_village_title_bar"
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/btn_search_cancel"
            android:background="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_medium"
            android:hint="Where does the client live?"
            android:maxLines="1"
            android:minWidth="100dp"
            android:padding="10dp"
            android:textColor="@color/dark_grey_text"
            android:textColorHint="@color/dark_grey_text"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>