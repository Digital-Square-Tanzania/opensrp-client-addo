<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/light_grey"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/google_sans_bold"
                android:textColor="@color/black"
                android:id="@+id/indicator_title"
                android:textSize="16sp"
                android:text="@string/current_month"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/numeric_indicator_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/numeric_indicator_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:gravity="start"
                    android:text="@string/current_month_visits"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/current_month_visits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="20"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="20sp" />

            </RelativeLayout>

            <View
                android:id="@+id/numeric_display_split_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/details"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/indicatorSplitLine" />

            <RelativeLayout
                android:id="@+id/current_month_clients_rl"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@id/numeric_display_split_line"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/current_month_clients_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:gravity="start"
                    android:text="@string/current_month_clients"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/current_month_clients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="6"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="20sp" />

            </RelativeLayout>

            <View
                android:id="@+id/current_month_clients_rl_split"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/details"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/indicatorSplitLine" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/current_month_children_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_regular"
                        android:layout_gravity="center"
                        android:text="@string/child_encounters"
                        android:textColor="@color/black_tranparent_50"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/current_month_children_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="@color/black_tranparent_50"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/details"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/indicatorSplitLine" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/current_month_adolescent_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_regular"
                        android:layout_gravity="center"
                        android:text="@string/adolescent_encounters"
                        android:textColor="@color/black_tranparent_50"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/current_month_adolescent_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="@color/black_tranparent_50"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/details"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/indicatorSplitLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/current_month_anc_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_regular"
                        android:layout_gravity="center"
                        android:text="@string/anc_encounters"
                        android:textColor="@color/black_tranparent_50"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/current_month_anc_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="@color/black_tranparent_50"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/details"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/indicatorSplitLine" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/current_month_pnc_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_regular"
                        android:layout_gravity="center"
                        android:text="@string/pnc_encounters"
                        android:textColor="@color/black_tranparent_50"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/current_month_pnc_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="@color/black_tranparent_50"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/details"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/indicatorSplitLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/current_month_other_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_regular"
                        android:layout_gravity="center"
                        android:text="@string/other_encounters"
                        android:textColor="@color/black_tranparent_50"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/current_month_other_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="@color/black_tranparent_50"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/details"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/indicatorSplitLine" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/details"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/indicatorSplitLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/numeric_issued_referrals_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:gravity="start"
                    android:text="@string/curr_month_referrals_issued"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/current_month_issued_referrals_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="50"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/indicatorSplitLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/current_month_completed_referrals_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:gravity="start"
                    android:text="@string/curr_month_referrals_completed"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/current_month_completed_referrals_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="30"
                    android:textColor="@color/black_tranparent_50"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/light_grey"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/google_sans_bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/last_month"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/google_sans_regular"
                android:gravity="start"
                android:text="@string/last_month_visits"
                android:textColor="@color/black_tranparent_50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/last_month_visits_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="50"
                android:textColor="@color/black_tranparent_50"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/google_sans_regular"
                android:gravity="start"
                android:text="@string/last_month_referrals_issued"
                android:textColor="@color/black_tranparent_50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/last_month_issued_referrals_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="50"
                android:textColor="@color/black_tranparent_50"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/google_sans_regular"
                android:gravity="start"
                android:text="@string/last_month_referrals_completed"
                android:textColor="@color/black_tranparent_50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/last_month_completed_referrals_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="50"
                android:textColor="@color/black_tranparent_50"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>